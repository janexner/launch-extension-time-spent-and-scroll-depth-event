{
  "displayName": "Time and Scroll Event",
  "name": "time-spent-and-scroll-depth-combined-event",
  "platform": "web",
  "version": "1.3.1",
  "description": "Provides an Event based on \"TIme Spent\" and \"Scroll Depth\".",
  "author": {
    "name": "Jan Exner, Adobe Consulting",
    "url": "http://adobe.com",
    "email": "jexner@adobe.com"
  },
  "exchangeUrl": "https://www.adobeexchange.com/experiencecloud.details.101057.html",
  "viewBasePath": "src/view/",
  "iconPath": "assets/icons/launch-icon-reactor.svg",
  "events": [
    {
      "displayName": "Combined Time Spent and Scroll Depth",
      "name": "combined-time-spent-and-scroll-depth",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "initDelay": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "scrollDepth": {
            "type": "number",
            "exclusiveMinimum": 0,
            "maximum": 100
          },
          "timeSpent": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "fireOnce": {
            "type": "boolean"
          },
          "fireOnShortPages": {
            "type": "boolean"
          }
        },
        "required": [
          "initDelay",
          "targetDepth",
          "triggerOnce",
          "fireOnShortPages"
        ],
        "additionalProperties": false
      },
      "libPath": "src/lib/events/combinedTimeSpentAndScrollDepth.js",
      "viewPath": "events/combinedTimeSpentAndScrollDepth.html"
    }
  ]
}
